<div class="container-fluid {{ ad ? 'bg-success' : 'bg-primary' }}">
    <div class="container">
        <nav class="navbar navbar-expand-lg navbar-dark {{ ad ? 'bg-success' : 'bg-primary' }}">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ site.link }}">
                    <span class="fw-bold">{{ site.name }}</span>
                </a>
                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        {% for item in menu.get_items %}
                        {% if item.children %}
                        <li class="nav-item dropdown {{ item.current_item_ancestor ? 'active' }}">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown">
                                {{ item.title }}
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                {% for child in item.children %}
                                <a class="dropdown-item {{ child.current ? 'active' }}" href="{{ child.link }}">{{ child.title }}</a>
                                {% endfor %}
                            </ul>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link {{ item.current ? 'active' }}" href="{{ item.link }}">{{ item.title }}</a>
                        </li>
                        {% endif %}
                        {% endfor %}
                        {% if ad %}
                            <li class="nav-item">
                                <a href="#" class="nav-link">Article sponsored by {{ sponsor }}</a><!-- nav-link -->
                            </li><!-- nav-item -->
                        {% endif %}
                    </ul>
                    <form class="d-flex form-inline my-2" method="GET" action="{{ site.link }}">
                        <input name="s" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-light" type="submit">Search</button>
                    </form>
                </div>
            </div>
        </nav>
    </div><!-- container -->
</div><!-- container-fluid -->